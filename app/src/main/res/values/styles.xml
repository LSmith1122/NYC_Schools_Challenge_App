<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchOption"/>

    <style name="SearchOption.Group" parent="SearchOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/main_activity_search_options_group_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/main_activity_search_options_group_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/main_activity_search_options_group_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/main_activity_search_options_group_margin_horizontal</item>
    </style>

    <style name="SpinnerGroup"/>

    <style name="SpinnerGroup.Horizontal" parent="SpinnerGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="SpinnerDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/spinner_description_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/spinner_description_margin_right</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.Done" parent="EditText">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditText.Search" parent="EditText">
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="EditText.SearchOption" parent="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>\
    </style>

    <style name="EditText.SearchOption.Done" parent="EditText.SearchOption">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditText.SearchOption.Search" parent="EditText.SearchOption">
        <item name="android:imeOptions">actionSearch</item>
    </style>

</resources>